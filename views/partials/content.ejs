<section class="review-container">
    <% for (let review of reviews){%>
        <div class="review">
            <div class="book-cover">
                <img src="<%=review.cover%>" alt="">
            </div>
            <div class="title">
                <a href="/view/<%=review.id%>" name = "viewReviewId"><h2><%=review.title%></h2></a>
            </div>
            <div class="author">
                <p>Author: <%=review.author%></p>
            </div>
            <div class="genre">
                <p>Genre: <%=review.genre%></p>
            </div>
            <div class="rating">
                <p>Rating: <%=review.rating%></p>
            </div>
            <div class="date">
                <p>Date Read: <%=review.formatted_date%></p>
            </div>
            <div class="description">
                <p><%=review.content%></p>
            </div>
        </div>
    <%}%> 

</section>