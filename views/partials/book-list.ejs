<div class="link">
    <a href="/admin">Add Review</a>
</div>

<div class="table-container">
    
    <table class="styled-table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Date Read</th>
                <th>Options</th>
            </tr>
        </thead>
        <%for (let review of reviews){%>
        
            <tbody>
                <tr>
                    <td class="book-thumbnail"><img src="<%=review.cover%>" alt="<%=review.title%>-cover"></td>
                    <td><%=review.title%></td>
                    <td><%=review.author%></td>
                    <td><%=review.genre%></td>
                    <td><%=review.formatted_date%></td>
                    <td><ul>
                        <li><a href="/view/<%=review.id%>" name = "viewReviewId" id="viewReviewId">View</a></li>                            
                        <li><a href="/edit/<%=review.id%>" name="editReviewId" id="editReviewId">Edit</a></li>
                        <li><a href="/delete/<%=review.id%>" name="deleteReviewId" id="deleteReviewId">Delete</a></li>
                    </ul></td>
                </tr>
                <!-- <tr class="active-row">
                    <td>Row 2, Cell 1</td>
                    <td>Row 2, Cell 2</td>
                    <td>Row 2, Cell 3</td>
                    <td>Row 2, Cell 4</td>
                </tr> -->
            </tbody>
            <%}%>
        </table>
   
</div>
